<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-xs-6 col-sm-4">
      <div class="flat-card">
        <div class="info">
          <h4><%= flat.name %></h4>
          <p id="address"><%= flat.address %></p>
          <div class="numbers">
            <p><i class="fas fa-users"></i> <%= flat.number_of_guests %></p>
            <p><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></p>
          </div>
        </div>
        <div class="card-footer">
          <%= link_to "More info", flat_path(flat) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
